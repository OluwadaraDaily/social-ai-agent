{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Widen rootDir to the project root so test files outside src/ are valid
    "rootDir": ".",
    // Tests are never compiled to disk â€” type-check only
    "noEmit": true,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "vitest.config.ts",
    "vitest.globalSetup.ts"
  ]
}
